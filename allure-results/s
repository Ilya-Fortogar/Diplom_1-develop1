#!/bin/bash

# Параметры скрипта
DIRECTORY="./"  # Укажите путь к вашей директории
OLD_WORD="user"              # Слово, которое нужно заменить
NEW_WORD="user"               # Слово, на которое нужно заменить

# Проверка, что директория существует
if [ ! -d "$DIRECTORY" ]; then
  echo "Ошибка: Директория $DIRECTORY не существует."
  exit 1
fi

# Проход по всем файлам в директории
for FILE in "$DIRECTORY"/*; do
  if [ -f "$FILE" ]; then
    echo "Обработка файла: $FILE"
    # Замена старого слова на новое
    sed -i "s/$OLD_WORD/$NEW_WORD/g" "$FILE"
  fi
done

echo "Завершено."
